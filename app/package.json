{
    "name": "app",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "start": "node --unhandled-rejections=strict ./bin/www",
        "start:dev": "./bin/dev.sh",
        "test": "npm run test:jest && npm run test:acceptance",
        "test:jest": "./bin/jest-test.sh",
        "test:acceptance": "./bin/postman-test.sh"
    },
    "dependencies": {
        "axios": "^0.19.2",
        "cookie-parser": "~1.4.4",
        "debug": "~2.6.9",
        "express": "~4.16.1",
        "express-jwt": "^5.3.3",
        "express-jwt-authz": "^2.3.1",
        "http-errors": "^1.7.3",
        "jwks-rsa": "^1.8.0",
        "log4js": "^6.1.2",
        "md5": "2.2.1",
        "mongodb": "^3.5.5",
        "morgan": "~1.9.1",
        "node-fetch": "^2.6.0",
        "object-hash": "^2.0.3",
        "recursive-readdir": "^2.2.2",
        "seedrandom": "3.0.5",
        "yargs": "^15.3.1"
    },
    "devDependencies": {
        "eslint": "^6.8.0",
        "eslint-plugin-jest": "^23.8.2",
        "husky": "^4.2.5",
        "jest": "^25.1.0",
        "lint-staged": "^10.0.8",
        "newman": "^4.6.0",
        "nodemon": "^2.0.2",
        "prettier": "2.0.1",
        "wait-on": "^4.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "./node_modules/.bin/eslint",
            "prettier --write"
        ],
        "*.json": [
            "prettier --write"
        ],
        "*.yml": [
            "prettier --write"
        ],
        "*.yaml": [
            "prettier --write"
        ]
    }
}
